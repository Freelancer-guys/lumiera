{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/dist/public/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/dist/public/favicon.ico"
    },
    {
      "src": "^/images/(.*)",
      "dest": "/dist/public/images/$1"
    },
    {
      "src": "^/dist/public/(.*)",
      "dest": "/dist/public/$1"
    },
    {
      "src": "^/(?!api|dist|images|favicon).*",
      "dest": "/dist/public/index.html"
    }
  ]
}